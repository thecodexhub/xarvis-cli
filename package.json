{
  "name": "xarvis-cli",
  "version": "1.0.0",
  "description": "A Command-Line Interface for generating production ready starter template.",
  "main": "src/index.ts",
  "bin": {
    "xarvis": "dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "cli",
    "generate-project"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thecodexhub/xarvis-cli.git"
  },
  "author": "Sandip Pramanik (@thecodexhub)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thecodexhub/xarvis-cli/issues"
  },
  "homepage": "https://github.com/thecodexhub/xarvis-cli#readme",
  "dependencies": {
    "arg": "^5.0.2",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "execa": "^5.1.1",
    "figlet": "^1.6.0",
    "inquirer": "^8.2.6",
    "listr": "^0.14.3",
    "ncp": "^2.0.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^8.2.6",
    "@types/listr": "^0.14.5",
    "@types/micromatch": "^4.0.2",
    "@types/ncp": "^2.0.6",
    "@types/node": "^20.5.8",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "micromatch": "^4.0.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
